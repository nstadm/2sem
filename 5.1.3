{
	cout << "AdHocSquare\n";
	AdHocSquare s(3.0);
	cout << s.get_area() << "\n";
	s.set_side(4.0);
	cout << s.get_area() << "\n";
	cout << "LazySquare\n";
	LazySquare s2(3.0);
	cout << s2.get_area() << "\n";
